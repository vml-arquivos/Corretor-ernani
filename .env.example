# ============================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ============================================
# IMPORTANTE: Substitua todos os valores de exemplo por valores reais
# NUNCA commite este arquivo no Git!

# ============================================
# BANCO DE DADOS POSTGRESQL
# ============================================
# Opção 1: PostgreSQL Local
POSTGRES_DB=corretordasmansoes
POSTGRES_USER=corretor
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Connection string (será montada automaticamente pelo docker-compose)
# DATABASE_URL=postgresql://corretor:password@db:5432/corretordasmansoes

# ============================================
# APLICAÇÃO
# ============================================
NODE_ENV=production
PORT=3000
APP_PORT=3000

# ============================================
# AUTENTICAÇÃO JWT
# ============================================
# Gere um secret forte com: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long_here

# ============================================
# OAUTH MANUS
# ============================================
VITE_APP_ID=your_manus_app_id_here
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://portal.manus.im

# ============================================
# INFORMAÇÕES DO PROPRIETÁRIO
# ============================================
OWNER_OPEN_ID=your_owner_open_id_here
OWNER_NAME=Ernani Nunes

# ============================================
# MANUS FORGE API (BACKEND)
# ============================================
BUILT_IN_FORGE_API_URL=https://forge-api.manus.im
BUILT_IN_FORGE_API_KEY=your_backend_forge_api_key_here

# ============================================
# MANUS FORGE API (FRONTEND)
# ============================================
VITE_FRONTEND_FORGE_API_URL=https://forge-api.manus.im
VITE_FRONTEND_FORGE_API_KEY=your_frontend_forge_api_key_here

# ============================================
# ANALYTICS
# ============================================
VITE_ANALYTICS_ENDPOINT=https://analytics.manus.im
VITE_ANALYTICS_WEBSITE_ID=your_website_analytics_id_here

# ============================================
# INFORMAÇÕES DO SITE
# ============================================
VITE_APP_TITLE=Corretor das Mansões - Ernani Nunes
VITE_APP_LOGO=https://your-logo-url.com/logo.png

# ============================================
# N8N INTEGRATION
# ============================================
# URL do webhook do N8N para automação de leads
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/leads
N8N_API_KEY=your_n8n_api_key_here

# ============================================
# PGADMIN (OPCIONAL - APENAS PARA DEV)
# ============================================
PGADMIN_EMAIL=admin@corretor.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# CONFIGURAÇÕES ADICIONAIS
# ============================================
# Timezone
TZ=America/Sao_Paulo

# Logs
LOG_LEVEL=info

# CORS (adicione os domínios permitidos separados por vírgula)
CORS_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com

# ============================================
# GOOGLE MAPS
# ============================================
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here


